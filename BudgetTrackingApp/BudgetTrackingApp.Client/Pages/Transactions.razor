        Snackbar.Add("Szerkesztés funkció még nincs kész.", Severity.Info);

        // Ideiglenes: frissítsünk, ha a dialógus bezárult (mintha mentettünk volna)
        // if (result != null && !result.Canceled)
        // {
        //    await LoadTransactionsAsync();
